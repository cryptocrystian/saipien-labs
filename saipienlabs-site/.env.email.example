# Cloudflare Email Routing + Mailgun SMTP Configuration
# Copy this file to .env.email and fill in your actual values

# Cloudflare API Configuration
# Get your API token from: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: DNS:Edit, Zone:Read, Email Routing:Edit
CF_API_TOKEN=your_cloudflare_api_token_here

# Get Zone ID from: https://dash.cloudflare.com/ → Select domain → Overview → Zone ID
CF_ZONE_ID=your_zone_id_here

# Optional: Account ID (from Cloudflare dashboard)
CF_ACCOUNT_ID=your_account_id_here

# Domain Configuration
ROOT_DOMAIN=saipienlabs.com

# Mailgun API Configuration
# Get your API key from: https://app.mailgun.com/settings/api_security
MG_API_KEY=your_mailgun_api_key_here

# Mailgun API base URL (default: https://api.mailgun.net)
# Use https://api.eu.mailgun.net if your domain is in EU region
MG_BASE=https://api.mailgun.net

# Mailgun sending domain (subdomain for sending emails)
MG_SENDING_DOMAIN=mg.saipienlabs.com

# Optional: Custom email routes as JSON array
# If not provided, uses DEFAULT_ROUTES from the script
# ROUTES_JSON='[{"address":"hello@saipienlabs.com","destination":"your@gmail.com"}]'

# Optional: Run without interactive confirmation
# RUN_NONINTERACTIVE=true
